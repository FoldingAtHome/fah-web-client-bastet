body
  --highlight-color    #444
  --secondary-color    #888

  --error-color        #b51100
  --success-color      #4caf50
  --warn-color         #fb0

  --body-bg            #e7e7e7
  --body-fg            #333

  --header-fg          #333
  --header-bg          #fff

  --input-bg           #fff
  --input-border-color #eee
  --input-border       2px inset var(--input-border-color)

  --panel-bg           #fff
  --panel-fg           var(--body-fg)

  --link-color         #ee9322
  --link-alt           #55aaff

  --logo-color         var(--header-fg)

  --log-fg             var(--panel-fg)
  --log-bg             var(--panel-bg)

  --title-color        inherit
  --subtitle-color     var(--secondary-color)

  --progress-fg        #fff
  --progress-bg        #aaa
  --progress-bar       var(--success-color)
  --progress-band      rgba(255, 255, 255, 0.15)
  --progress-img       linear-gradient(45deg, var(--progress-band) 25%, \
                       transparent 25%, transparent 50%, \
                       var(--progress-band) 50%, var(--progress-band) 75%, \
                       transparent 75%, transparent)

  --button-bg          #0b5ed7
  --button-fg          #fff
  --button-icon-fg     #000
  --button-success     var(--success-color)
  --button-caution     var(--error-color)
  --button-disabled-bg #aaa
  --button-disabled-fg #ddd

  --pacify-bg          rgba(0, 0, 0, 0.6)

  --overlay-bg         rgba(0, 0, 0, 0.4)
  --overlay-fg         #fff

  --code-bg            #ddd
  --code-fg            #444

  --border-color       var(--panel-bg)

  --table-border-color #888
  --table-border       1px solid var(--table-border-color)
  --table-header-bg    #dedede
  --table-header-fg    #333
  --table-even         #fff
  --table-odd          #f3f3f3

  --shadow-color       #222
  --shadow             3px 3px 12px var(--shadow-color)

  --border-radius      0

  --border             1px solid var(--border-color)
  --header-border      var(--border)
