html .dark
  background #222

  input, select
    color #fff
    background-color #444
    border 2px inset #666

  button.button-icon:not(:hover)
    background transparent
    color #eee

  button:disabled
    color #666
    background #444

    .fa
      color #666

  .page-view, .view-body, .dialog
    color #ddd
    background-color #222

    h1, h2, h3, h4, h5
      color #ddd

  .page-view
    .news-feed article, fieldset, .projects .project
      background-color #111

    .units th, .units td, .news-feed article, .peers th, .peers td, fieldset,
    .projects .project
      border 1px solid #444

  .page-view .view-header-container .view-header .actions button:disabled .fa
    color #666

  .home-view .units, .home-view .peers
     tr:nth-child(odd)
        background #111

     tr:nth-child(even)
      background #222

     .actions > button .fa:not(:hover)
       color #eee

     .actions > button:disabled .fa
       color #666

  .dialog-overlay
    background rgba(0, 0, 0, 0.6)

    .dialog
      background-color #222

      .dialog-header
        border-bottom 1px solid #666
